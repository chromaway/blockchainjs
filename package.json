    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^0.10.x"
  },
  "dependencies": {
    "bigi": "=1.4.0",
    "bluebird": "=2.9.14",
    "browser-request": "=0.3.3",
    "bs58check": "=1.0.4",
    "error-system": "=0.1.0",
    "lodash": "=3.4.0",
    "lru-cache": "=2.5.0",
    "request": "=2.53.0",
    "socket.io-client": "=1.3.5",
    "sqlite3": "=3.0.8",
    "url-join": "=0.0.1",
    "ws": "=0.7.1"
  },
  "devDependencies": {
    "bitcoinjs-lib": "=1.4.3",
    "browserify": "^9.0.8",
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "helloblock-faucet": "^0.0.1",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "optimist": "^0.6.1",
    "progress": "^1.1.8",
    "standard": "^3.7.3",
    "uglify": "^0.1.3"
  },
  "scripts": {
    "coveralls": "npm run-script coverage && coveralls <coverage/lcov.info",
    "coverage": "istanbul cover _mocha -- test/*.js test/**/*.js",
    "lint": "standard",
    "compile_test": "browserify test/*.js test/**/*.js >blockchainjs.test.js",
    "compile": "browserify lib/index.js -s BlockchainJS -o blockchainjs.js",
    "build": "npm run-script compile && npm run-script uglify",
    "clean": "rm -f blockchainjs.js blockchainjs.min.js blockchainjs.test.js",
    "test": "istanbul test mocha -- --reporter spec test/*.js test/**/*.js",
    "uglify": "uglify -s blockchainjs.js -o blockchainjs.min.js"
  },
  "browser": {
    "request": "browser-request",
    "./lib/storage/sqlite.js": "./lib/storage/sqlite-browser.js"
  },
  "standard": {
    "ignore": [
      "blockchainjs.js",
      "blockchainjs.min.js",
      "blockchainjs.test.js"
    ]
  }
}
